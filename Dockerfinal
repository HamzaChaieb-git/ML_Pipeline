# Use an official Python runtime as a parent image
FROM python:3.9-slim

# Set working directory in container
WORKDIR /app

# Copy requirements file
COPY requirements.txt .

# Install dependencies with an effectively unlimited timeout
RUN pip install --no-cache-dir --timeout 99999 -r requirements.txt

# Copy specific Python scripts
COPY data_processing.py .
COPY main.py .
COPY model_evaluation.py .
COPY model_persistence.py .
COPY model_training.py .

# Copy data files to a 'data' directory
COPY churn-bigml-20.csv data/
COPY churn-bigml-80.csv data/

# Copy any additional configuration files (e.g., =2.0, Dockerfinal if needed)
COPY '=2.0' .
COPY Dockerfinal .

# Create directories for MLflow artifacts and database
RUN mkdir -p /mlflow_data/artifacts /mlflow_data/database

# Set permissions for directories
RUN chmod -R 777 /app /mlflow_data

# Set environment variables (can be overridden by Jenkins)
ENV MLFLOW_TRACKING_URI=http://localhost:5001

# Expose port for MLflow (optional, if running MLflow locally in the container)
EXPOSE 5001

# Command to keep container running (can be overridden by Jenkins)
CMD ["tail", "-f", "/dev/null"]